<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef>
		<defName>NecrodermisRepair</defName>
		<hediffClass>Rimhammer40k.Necrons.HediffNecrodermisRepair</hediffClass>
		<label>necrodermis repair</label>
		<defaultLabelColor>(0.6,0.85,0.91)</defaultLabelColor>
		<isBad>false</isBad>
		<scenarioCanAdd>false</scenarioCanAdd>
		<maxSeverity>1.0</maxSeverity>
		<stages>
			<li>
				<capMods>
					<li>
						<capacity>BloodFiltration</capacity>
						<offset>1.0</offset>
					</li>
					<li>
						<capacity>BloodPumping</capacity>
						<offset>1.0</offset>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>
	
	<HediffDef>
		<defName>NecronProtoBodypart</defName>
		<label>repairing</label>
		<hediffClass>Rimhammer40k.Necrons.HediffNecronGrowingPart</hediffClass>
		<defaultLabelColor>(0.59, 0.92, 0.69)</defaultLabelColor>
		<isBad>false</isBad>
		<addedPartProps>
			<!-- isSolid>true</isSolid -->
			<partEfficiency>0.1</partEfficiency>
		</addedPartProps>
		<initialSeverity>0.0</initialSeverity>
		<maxSeverity>1.0</maxSeverity>
		<stages>
			<li>
				<minSeverity>0</minSeverity>
				<painOffset>0.2</painOffset>
			</li>
			<li>
				<minSeverity>0.3</minSeverity>
				<painOffset>0.15</painOffset>
			</li>
			<li>
				<minSeverity>0.6</minSeverity>
				<painOffset>0.1</painOffset>
			</li>
			<li>
				<minSeverity>0.9</minSeverity>
				<painOffset>0.05</painOffset>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_Immunizable">
				<severityPerDayNotImmune>0.07</severityPerDayNotImmune> <!-- 0.07 is roughly a Quadrum (15 days) -->
			</li>
		</comps>
	</HediffDef>
	
	<HediffDef>
		<defName>NecronCuredBodypart</defName>
		<label>cured bodypart</label>
		<hediffClass>Rimhammer40k.RemovableHediff</hediffClass>
		<defaultLabelColor>(1.0, 1.0, 1.0)</defaultLabelColor>
		<isBad>false</isBad>
		<initialSeverity>0.0</initialSeverity>
		<maxSeverity>1.0</maxSeverity>
		<stages>
			<li>
				<becomeVisible>false</becomeVisible>
			</li>
		</stages>
	</HediffDef>
	
	<HediffDef>
		<defName>GaussPlasmaLoss</defName>
		<label>plasma loss</label>
		<lethalSeverity>1</lethalSeverity>
		<stages>
			<li>
				<label>minor</label>
				<becomeVisible>false</becomeVisible>
			</li>
			<li>
				<minSeverity>0.15</minSeverity>
				<label>minor</label>
				<statOffsets>
					<PsychicSensitivity>-0.2</PsychicSensitivity>
					<AimingDelayFactor>0.10</AimingDelayFactor>
				</statOffsets>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.1</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.30</minSeverity>
				<label>moderate</label>
				<statOffsets>
					<PsychicSensitivity>-0.4</PsychicSensitivity>
					<AimingDelayFactor>0.20</AimingDelayFactor>
				</statOffsets>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.2</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.45</minSeverity>
				<label>severe</label>
				<statOffsets>
					<PsychicSensitivity>-0.6</PsychicSensitivity>
					<AimingDelayFactor>0.30</AimingDelayFactor>
				</statOffsets>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.4</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.60</minSeverity>
				<label>extreme</label>
				<lifeThreatening>true</lifeThreatening>
				<statOffsets>
					<PsychicSensitivity>-0.8</PsychicSensitivity>
					<AimingDelayFactor>0.40</AimingDelayFactor>
				</statOffsets>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.1</setMax>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>
	
</Defs>