<Defs>

	<!-- ====== Clothing ====== -->
	
	<ThingDef ParentName="ApparelMakeableBase" Name="SteelLegionUniform"> <!-- Krieg Uniform -->
		<defName>SteelLegionUniform</defName>
		<label>Steel Legion Uniform</label>
		<description>A full-body uniform the Armageddon Steel Legion most often wear, typically under their armor.</description>
		<graphicData>
			<texPath>Things/Imperial Guard/SteelLegion/Clothing/SteelLegionUniform_normal</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>
		<techLevel>Spacer</techLevel>
		<costList>
			<Cloth>60</Cloth>
		</costList>
		<tradeability>Sellable</tradeability>
		<equippedStatOffsets>
			<ToxicSensitivity>-0.70</ToxicSensitivity>
		</equippedStatOffsets>
		<statBases>
			<MaxHitPoints>150</MaxHitPoints>
			<WorkToMake>3600</WorkToMake>
			<MarketValue>300</MarketValue>
			<Mass>1</Mass>
			<Insulation_Cold>18</Insulation_Cold>
			<Insulation_Heat>8</Insulation_Heat>
			<EquipDelay>2.0</EquipDelay>
		</statBases>
		<thingCategories>
			<li>IGApparel</li>
		</thingCategories>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Legs</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Imperial Guard/SteelLegion/Clothing/SteelLegionUniform_normal</wornGraphicPath>
			<layers>
				<li>OnSkin</li>
			</layers>
			<tags>
				<li>ImperialGuardApparel</li>
				<li>SteelLegionApparel</li>
				<li>SteelLegionTrooperApparel</li>
				<li>SteelLegionTraderApparel</li>
			</tags>
		</apparel>
		<recipeMaker>
			<recipeUsers>
				<li>ElectricTailoringBench</li>
				<li>HandTailoringBench</li>
			</recipeUsers>
			<researchPrerequisite>N17_Imp_IGBasicArmor</researchPrerequisite>
			<skillRequirements>
				<Crafting>4</Crafting>
			</skillRequirements>
		</recipeMaker>
	</ThingDef>
	
