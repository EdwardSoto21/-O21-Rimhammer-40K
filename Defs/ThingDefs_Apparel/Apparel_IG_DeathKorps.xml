	<ThingDef ParentName="ApparelMakeableBase" Name="KriegUniform"> <!-- Krieg Uniform -->
		<defName>KriegUniform</defName>
		<label>Krieg Uniform</label>
		<description>A full-body uniform the Death Korps of Krieg most often wear, typically under their armor.</description>
		<graphicData>
			<texPath>Things/Imperial Guard/Krieg/Clothing/DeathKorpsUniform</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>
		<techLevel>Spacer</techLevel>
		<costList>
			<Cloth>60</Cloth>
		</costList>
		<tradeability>Sellable</tradeability>
		<equippedStatOffsets>
			<ToxicSensitivity>-0.70</ToxicSensitivity>
		</equippedStatOffsets>
		<statBases>
			<MaxHitPoints>150</MaxHitPoints>
			<WorkToMake>3600</WorkToMake>
			<MarketValue>300</MarketValue>
			<Mass>1</Mass>
			<Insulation_Cold>18</Insulation_Cold>
			<Insulation_Heat>8</Insulation_Heat>
			<EquipDelay>2.0</EquipDelay>
		</statBases>
		<thingCategories>
			<li>IGApparel</li>
		</thingCategories>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Legs</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Imperial Guard/Krieg/Clothing/DeathKorpsUniform</wornGraphicPath>
			<layers>
				<li>OnSkin</li>
			</layers>
			<tags>
				<li>ImperialGuardApparel</li>
				<li>KriegApparel</li>
				<li>KriegTrooperApparel</li>
				<li>KriegGrenadierApparel</li>
				<li>KriegPickelTrooperApparel</li>
				<li>KriegTraderApparel</li>
			</tags>
		</apparel>
		<recipeMaker>
            <recipeUsers Inherit="False">
                <li>O21_ImpBench_Basic</li>
            </recipeUsers>
			<researchPrerequisite>O21_Imp_IGBasicArmor</researchPrerequisite>
			<skillRequirements>
				<Crafting>4</Crafting>
			</skillRequirements>
		</recipeMaker>
	</ThingDef>
	
