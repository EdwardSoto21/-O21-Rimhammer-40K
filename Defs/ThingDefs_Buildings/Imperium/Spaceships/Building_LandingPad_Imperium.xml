<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="SpaceshipBuildingBase">
		<defName>LandingPad_Imperium</defName>
		<label>landing pad (imperium)</label>
		<description>Flat platform allowing voidships to land.</description>
		<thingClass>Rimhammer40k.Spaceship.Building_LandingPad</thingClass>
		<tickerType>Normal</tickerType>
		<graphicData>
			<texPath>Things/Ships/Imperium/LandingPad</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(15,15)</drawSize>
		</graphicData>
		<castEdgeShadows>false</castEdgeShadows>
		<staticSunShadowHeight>0</staticSunShadowHeight>
		<altitudeLayer>FloorEmplacement</altitudeLayer>
		<useHitPoints>false</useHitPoints>
		<fillPercent>0.0</fillPercent>
		<passability>Standable</passability>
		<blockWind>false</blockWind>
		<constructEffect>ConstructMetal</constructEffect>
		<building>
			<isEdifice>false</isEdifice>
		</building>
		<statBases>
			<MaxHitPoints>500</MaxHitPoints>
			<WorkToMake>10000</WorkToMake>
			<Flammability>0</Flammability>
			<Beauty>-20</Beauty>
		</statBases>
		<size>(15,15)</size>
		<costList>
			<Steel>100</Steel>
			<ComponentIndustrial>2</ComponentIndustrial>
		</costList>
		<designationCategory>Ship</designationCategory>
		<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
		<placeWorkers>
			<li>Rimhammer40k.Spaceship.PlaceWorker_TotallyNotUnderRoof</li>
			<li>Rimhammer40k.Spaceship.PlaceWorker_NotUnderBuilding</li>
		</placeWorkers>
		<comps>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>100</basePowerConsumption>
				<shortCircuitInRain>false</shortCircuitInRain>
			</li>
			<li Class="CompProperties_Flickable"/>
		</comps>
		<leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
		<researchPrerequisites>
			<li>N17_Imp_OrbitalRequisition</li>
		</researchPrerequisites>
	</ThingDef>

</Defs>