<?xml version="1.0" encoding="utf-8" ?>
<Defs>


	<!--Setting up the base for Aegis walls -->
	<ThingDef ParentName="BuildingBase" Name="Aegis_Wall_Base" Abstract="True">
		<defName>Aegis_Wall_Base</defName>
		<label>Aegis Wall</label>
		<description>A defensive wall that provide cover to fire from.</description>
		<thingClass>Building</thingClass>
		<category>Building</category>
		<graphicData>
			<texPath>Things/Building/Linked/Wall</texPath>
		<!--May change to need to change to Grahpic_Single-->
			<graphicClass>Graphic_Single</graphicClass> 
			<linkType>CornerFiller</linkType>
			<linkFlags>
				<li>Wall</li>
				<li>Rock</li>
			</linkFlags>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
				<edgeTop>Damage/Edge</edgeTop>
				<edgeBot>Damage/Edge</edgeBot>
				<edgeLeft>Damage/Edge</edgeLeft>
				<edgeRight>Damage/Edge</edgeRight>
			</damageData>
		</graphicData>
		<uiIconPath>Things/Building/Linked/WallSmooth_MenuIcon</uiIconPath>
		<statBases>
			<Flammability>0</Flammability>
		</statBases>
		<leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
		<altitudeLayer>Building</altitudeLayer>
		<blockWind>true</blockWind>
		<castEdgeShadows>true</castEdgeShadows>
		<fillPercent>1</fillPercent>
		<coversFloor>true</coversFloor>
		<placingDraggableDimensions>1</placingDraggableDimensions>
		<tickerType>Never</tickerType>
		<rotatable>false</rotatable>
		<selectable>true</selectable>
		<neverMultiSelect>true</neverMultiSelect>
		<terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
		<holdsRoof>False</holdsRoof>
		<designationCategory>Structure</designationCategory>
		<staticSunShadowHeight>1.0</staticSunShadowHeight>
		<blockLight>False</blockLight>
		<canOverlapZones>false</canOverlapZones>
		<building>
			<isInert>true</isInert>
			<ai_chillDestination>false</ai_chillDestination>
			<blueprintGraphicData>
				<texPath>Things/Building/Linked/Wall_Blueprint_Atlas</texPath>
			</blueprintGraphicData>
		</building>
		<damageMultipliers>
			<li>
				<damageDef>Bomb</damageDef>
				<multiplier>2</multiplier>
			</li>
		</damageMultipliers>
		<designationHotKey>Misc3</designationHotKey>
	</ThingDef>
	
	<!--Embrasure for Imperial Guard -->
	<ThingDef Name="IG_Aegis" ParentName="Aegis_Wall_Base">
		<defName>IG_Aegis</defName>
		<label>IG Aegis Wall</label>
		<description>A defensive wall that provides cover to fire from.</description>
		<researchPrerequisites>
			<li>N17_Imp_Construction</li>
		</researchPrerequisites>
		<costStuffCount>5</costStuffCount>
		<stuffCategories>
			<li>Metallic</li>
			<li>Stony</li>
		</stuffCategories>
		<statBases>
			<MaxHitPoints>400</MaxHitPoints>
			<WorkToBuild>500</WorkToBuild>
		</statBases>
		<passability>PassThroughOnly</passability>
		<pathCost>300</pathCost>
		<pathCostIgnoreRepeat>True</pathCostIgnoreRepeat>
		<fillPercent>0.80</fillPercent>
		<uiIconPath>Things/Building/Structure/Aegis/IG/IG_aegis_menu</uiIconPath>
		<graphicData>
			<texPath>Things/Building/Structure/Aegis/IG/IG_aegis_atlas</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
	</ThingDef>

	<!--Embrasure for Tau-->
	<ThingDef Name="TAU_Aegis" ParentName="Aegis_Wall_Base">
		<defName>TAU_Aegis</defName>
		<label>Tau Aegis Wall</label>
		<description>A defensive laser wall that is impassable and provides cover to fire from.</description>
		<researchPrerequisites>
			<li>N17_Tau_DefStructures</li>
		</researchPrerequisites>
		<costList>
			<Steel>5</Steel>
		</costList>
		<statBases>
			<MaxHitPoints>350</MaxHitPoints>
			<WorkToBuild>700</WorkToBuild>
		</statBases>
		<passability>Impassable</passability>
		<fillPercent>0.75</fillPercent>
		<uiIconPath>Things/Building/Structure/Aegis/TAU/TAU_aegis_menu</uiIconPath>
		<graphicData>
			<texPath>Things/Building/Structure/Aegis/TAU/TAU_aegis_atlas</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
	</ThingDef>

