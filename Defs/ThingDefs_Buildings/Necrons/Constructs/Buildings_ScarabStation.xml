<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<ThingDef ParentName="N17BuildingBase">
		<defName>ConstructStation_Scarab</defName>
		<label>scarab platform</label>
		<description>A small device which can be place in the floor, it will allow a Scarab to dock into it for when it is not needed or needs to gather energy. (This spawns a single scarab capable of most simple tasks.)</description>
		<thingClass>Rimhammer40k.Constructs.Building_ConstructStationSpecialGraphics</thingClass>
		<costList>
			<Necrodermis>50</Necrodermis>
		</costList>
		<graphicData>
			<texPath>Things/Necron/Building/ScarabStation</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>(1, 1)</drawSize>
		</graphicData>
		<thingCategories>
			<li>BuildingsFurniture</li>
		</thingCategories>
		<size>(1, 1)</size>
		<minifiedDef>MinifiedThing</minifiedDef>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<fillPercent>0.1</fillPercent>
		<castEdgeShadows>false</castEdgeShadows>
		<tickerType>Normal</tickerType>
		<statBases>
			<Mass>10</Mass>
			<WorkToBuild>3000</WorkToBuild>
			<MaxHitPoints>100</MaxHitPoints>
			<Flammability>1.0</Flammability>
		</statBases>
		<drawGUIOverlay>true</drawGUIOverlay>
		<modExtensions>
			<li Class="Rimhammer40k.Constructs.DefModExtension_ConstructStation">
				<displayDormantConstructs>true</displayDormantConstructs>
				<workTypes>
					<li>Firefighter</li>
					<li>BasicWorker</li>
					<li>Hauling</li>
					<li>Cleaning</li>
					<li>Construction</li>
					<li>Mining</li>
					<li>Growing</li>
					<li>Crafting</li>
					<li>PlantCutting</li>
				</workTypes>
			</li>
		</modExtensions>
		<comps>
			<li><compClass>Rimhammer40k.Common.CompHelp</compClass></li>
			<li Class="CompProperties_Refuelable">
				<fuelConsumptionRate>0</fuelConsumptionRate>
				<fuelCapacity>4</fuelCapacity>
				<fuelConsumptionPerTickInRain>0</fuelConsumptionPerTickInRain>
				<consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
				<fuelFilter>
					<thingDefs>
						<li>InactiveScarab</li>
					</thingDefs>
				</fuelFilter>
				<targetFuelLevelConfigurable>true</targetFuelLevelConfigurable>
				<initialConfigurableTargetFuelLevel>2</initialConfigurableTargetFuelLevel>
				<drawOutOfFuelOverlay>false</drawOutOfFuelOverlay>
			</li>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<shortCircuitInRain>false</shortCircuitInRain>
				<basePowerConsumption>150</basePowerConsumption>
			</li>
		</comps>
		<rotatable>false</rotatable>
		<designationCategory>Misc</designationCategory>
		<researchPrerequisites>
			<li>N17_Nec_Research</li>
		</researchPrerequisites>
	</ThingDef>
</Defs>